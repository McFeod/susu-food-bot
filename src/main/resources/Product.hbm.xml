<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "src/main/resources/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="logic">
    <class name="Product" table="products">
        <id column="product_id" name="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="java.lang.String" unique="true" not-null="true"/>

    </class>
</hibernate-mapping>