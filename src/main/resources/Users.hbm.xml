<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "src/main/resources/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="logic">
    <class name="User" table="users">
        <id column="telegram_id" name="telegramId" type="java.lang.Long"/>
        <property column="argument" name="argument" type="java.lang.String" unique="false" not-null="false"/>
        <property column="state" name="state" >
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">logic.UserState</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property column="rating" name="rating" type="java.lang.Integer" unique="false" not-null="false"/>
    </class>
</hibernate-mapping>